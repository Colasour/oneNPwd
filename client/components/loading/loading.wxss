.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  transition: all 0.3s;
  z-index: 2;
}

.loading {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 28rpx;
  color: #ff375f;
}

.loading-spinner {
  box-sizing: border-box;
  position: relative;
  margin-bottom: 20rpx;
  width: 80rpx;
  height: 80rpx;
  max-width: 100%;
  max-height: 100%;
  border: 3rpx solid transparent;
  border-radius: 100%;
  border-top-color: initial;
  animation: rotate 0.8s linear infinite;
}

@keyframes rotate {
  0% {
    transform: rotate(0);
  }
  to {
    transform: rotate(1turn);
  }
}
