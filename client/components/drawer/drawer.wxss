.drawer-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: flex-end;
  background: rgba(0, 0, 0, 0.7);
  transform: scale(1);
  transition: all 0.3s ease-in-out 0s;
  pointer-events: none;
  opacity: 0;
  z-index: 3;
}

.drawer {
  width: 35vw;
  background-color: var(--BG-1);
  transition-duration: 0.3s;
  overflow: hidden;
}

.drawer-active {
  transition-duration: 0.3s;
  pointer-events: auto;
  overflow-x: hidden;
  overflow-y: hidden;
  opacity: 1;
}

.drawer-enter {
  transform: translateX(0%);
}

.drawer-leave {
  transform: translateX(100%);
}