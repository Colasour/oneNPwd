.notify {
  position: fixed;
  left: 0;
  bottom: 20vh;
  display: flex;
  justify-content: center;
  width: 100%;
  font-size: 28rpx;
  z-index: 10;
}

.notify-container {
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  line-height: 60rpx;
  border-radius: 20rpx;
}

.user-font {
  font-style: italic;
  font-weight: bold;
}

.notify-animate {
  animation-name: cola;
  animation-duration: 4s;
}

@keyframes cola {
  0% {
    transform: translateY(1200px) scale(0.7);
    opacity: 0.7;
  }
  15% {
    transform: translateY(0) scale(0.7);
    opacity: 0.7;
  }
  25%,
  70% {
    transform: scale(1);
    opacity: 1;
  }
  80% {
    transform: translateY(0) scale(0.7);
    opacity: 0.7;
  }
  90% {
    transform: translateY(700px) scale(0.7);
    opacity: 0.7;
  }
}
