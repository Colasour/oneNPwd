.guide-mark {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgb(0, 0, 0);
  opacity: 0.9;
  z-index: 11;
}

.guide-wrapper {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  height: 90vh;
}

.guide-tip {
  display: flex;
  flex-direction: column;
}

.guide-know {
  display: flex;
  justify-content: flex-end;
  width: 100%;
}
