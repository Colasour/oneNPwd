.wrapper {
  box-sizing: border-box;
  padding-top: 100rpx;
  padding-bottom: 125rpx;
}

.drawer-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx 10rpx;
  padding: 20rpx;
  border-radius: 20rpx;
  background: var(--BG-btn);
  color: var(--FG-btn);
  font-size: 30rpx;
  font-weight: bold;
  box-shadow: 6rpx 6rpx 8rpx rgba(0, 0, 0, 0.15);
}

.fixed-bottom {
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: center;
  z-index: 2;
}

.fixed-bottom::before {
  content: ' ';
  position: fixed;
  bottom: 0;
  height: 60rpx;
  width: 100%;
  background: var(--BG-main);
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.fixed-buttons {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  background: var(--BG-main);
  border-radius: 50%;
  box-shadow: 0 -1rpx 5rpx rgba(0, 0, 0, 0.1);
}

.fixed-buttons .fixed-icon {
  width: 100%;
  height: 100%;
}

.detail-mark {
  box-sizing: border-box;
  margin: 10rpx 0;
  padding: 20rpx;
  width: 100%;
  font-size: 28rpx;
  color: var(--FG-main);
  word-break: break-all;
  border-radius: 10rpx;
  background: var(--BG-minor);
  opacity: 0.7;
}

.blur {
  filter: blur(8rpx);
}
